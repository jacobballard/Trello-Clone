<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.ReorderCardController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="20.0">
         <children>
            <Label fx:id="inputMessageLabel" text="Enter card positions:" />
            <HBox>
               <children>
                  <VBox>
                     <children>
                        <TextField fx:id="oldRowPositionTextField" promptText="Old Row (0 - Max)" />
                        <TextField fx:id="oldColumnPositionTextField" promptText="Old Column (0-Max)" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <TextField fx:id="newRowPositionTextField1" promptText="New Row (0 - Max)" />
                        <TextField fx:id="newColumnPositionTextField1" promptText="New Column (0-Max)" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <Button fx:id="inputButton" mnemonicParsing="false" onAction="#inputButtonTapped" text="Reorder" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
