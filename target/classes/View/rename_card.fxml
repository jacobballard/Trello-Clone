<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.RenameCardController">
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="300.0" spacing="20.0">
         <children>
            <Label fx:id="inputMessageLabel" text="Enter new card name:" />
            <TextField fx:id="rowPositionTextField" promptText="Row (0 - Max)" />
            <TextField fx:id="columnPositionTextField" promptText="Column (0-Max)" />
            <TextField fx:id="nameTextField" promptText="Name" />
            <Button fx:id="inputButton" mnemonicParsing="false" onAction="#inputButtonTapped" text="Done" />
         </children>
         <padding>
            <Insets left="20.0" right="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
